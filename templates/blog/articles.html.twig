{% block sidebar %}
    <ul>
        <li><a href="/logout">Logout</a></li>
    </ul>
{% endblock %}

{% block body %}

    <ul><h2>Articles</h2>
        {% for article in pagination  %}

            <li>{{ article.id }}</li>
            <li>{{ article.text | title}}</li>
            <p><a class="more" href="{{ path('articles', { 'id': article.id }) }}">read more...</a></p>
        {% endfor %}
    </ul>

    <div class="navigation">
        {{ knp_pagination_render(pagination) }}
    </div>
{% endblock %}
